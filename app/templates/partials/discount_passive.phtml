<?php
/**
 * Шаблон блока скидки, когда формирование заказа уже завершилось
 */

/** @var \App\Models\OrdersRow $order */

?>
<p>Скидка:
    <?php
        $discounts = array();
        if ($order->discount_percent != 0) {
            $discounts[] = $order->discount_percent . "%";
        }
        if ($order->discount_absolute != 0) {
            $discounts[] = $order->discount_absolute . " руб.";
        }
        echo $this->escape(implode(" + ", $discounts));
    ?>
</p>
